{
  "manifest_version": 3,
  "name": "Ex-Peek",
  "version": "1.1.0",
  "description": "Redirects Excalidraw files to a web-based viewer.",
  "permissions": [],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/image.png",
    "48": "icons/image.png",
    "128": "icons/image.png"
  },
  "short_name": "Ex-Peek"
} 